{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", "src/**/*.ts", "src/**/*.vue", "lib/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2022",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  }
}
