{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "lib/**/*.ts",
    "modules/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "es2021",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "lib": [
      "ES2020",
      "es2021",
      "DOM",
      "DOM.Iterable",
      "ESNext.String"
    ]
  }
}
